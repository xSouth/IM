<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:id="@+id/activity_main_fragment_relativelayout"
    android:background="@null">


    <TextView
        android:layout_above="@+id/activity_main_fragment_layout_choose"
        android:gravity="center"
        android:padding="30dp"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:textSize="40sp"
        android:id="@+id/activity_main_fragment_layout_im"
        android:text="IM"
        android:layout_centerHorizontal="true"
        android:layout_width="300px"
        android:layout_height="300px"
        />
    

    <LinearLayout
        android:id="@+id/activity_main_fragment_layout_choose"
        android:layout_width="700px"
        android:layout_height="100px"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_centerHorizontal="true"
        >

        <Button
            android:id="@+id/activity_main_fragment_layout_gosignin_submit"
            android:text="注册"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/activity_vertical_margin"/>

        <Button
            android:id="@+id/activity_main_fragment_layout_gosignup_submit"
            android:text="登录"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/activity_vertical_margin"/>


    </LinearLayout>
</com.zhy.autolayout.AutoRelativeLayout>